#!/usr/bin/env bash

# This script should help facilitate setting up a new worktree, including:

# - creating a new worktree
# - installing dependencies
# - creating a new branch

set -Eeuo pipefail
trap cleanup SIGINT SIGTERM ERR EXIT

# shellcheck disable=SC2034
script_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)

usage() {
  cat <<EOF
Usage: $(basename "${BASH_SOURCE[0]}") [-h] [-v] [-b] [-B] [-p] [-N] <path>

Script the creation of a new worktree.

Available options:

-h, --help                    Print this help and exit
-v, --verbose                 Print script debug info
-b, --branch                  The branch to create
-B, --base                    The branch to use as the base for the new worktree
-p, --prefix                  The prefix to apply to the branch name
-N, --no-create-upstream      Do not create an upstream branch

Configuration:

You can create a .worktreerc file in your project root to set defaults:

    trunk=2.x              # trunk branch name (default: main)
    remote=origin          # remote name (default: origin)
    prefix=CS-             # branch prefix (default: \$(git config github.user)/)
    install_cmd=pnpm install   # override install command (auto-detected if not set)
    post_setup="mkdir -p .claude && cp /path/to/local.json .claude/"  # run after setup

The base branch defaults to \$remote/\$trunk (e.g., origin/2.x).

This script performs the following steps:

1. Create a new worktree, based off the base branch
2. Create a new upstream branch to track the work
3. Install dependencies (auto-detected from lockfile)

Examples:

# Create a worktree using a branch name (uses .worktreerc defaults)
$(basename "${BASH_SOURCE[0]}") -b CS-1719-playwright

# Create a worktree with explicit path (generates branch name using prefix)
$(basename "${BASH_SOURCE[0]}") add-feature

# Create a worktree from a different base branch (override .worktreerc)
$(basename "${BASH_SOURCE[0]}") -B origin/develop -b feature/new-thing
EOF
  exit
}

cleanup() {
  trap - SIGINT SIGTERM ERR EXIT
  tput cnorm # enable cursor
  # script cleanup here
}

setup_colors() {
  if [[ -t 2 ]] && [[ -z "${NO_COLOR-}" ]] && [[ "${TERM-}" != "dumb" ]]; then
    # shellcheck disable=SC2034
    NOFORMAT='\033[0m' GRAY='\033[0;90m' RED='\033[0;31m' GREEN='\033[0;32m' ORANGE='\033[0;33m' BLUE='\033[0;34m' PURPLE='\033[0;35m' CYAN='\033[0;36m' YELLOW='\033[1;33m'
  else
    # shellcheck disable=SC2034
    NOFORMAT='' GRAY='' RED='' GREEN='' ORANGE='' BLUE='' PURPLE='' CYAN='' YELLOW=''
  fi
}

msg() {
  echo >&2 -e "${1-}"
}

# log() {
#   echo >&2 -ne "${1-}"
# }

info() {
  msg "${GRAY}[INFO]${NOFORMAT} ${1-}"
}

die() {
  local msg=$1
  local code=${2-1} # default exit status 1
  msg "$msg"
  exit "$code"
}

function spinner() {
  # make sure we use non-unicode character type locale
  # (that way it works for any locale as long as the font supports the characters)
  local LC_CTYPE=C
  local pid=$1 # Process Id of the previous running command
  local spin='⣾⣽⣻⢿⡿⣟⣯⣷'
  local charwidth=3

  local i=0
  tput civis # cursor invisible
  while kill -0 "$pid" 2>/dev/null; do
    local i=$(((i + charwidth) % ${#spin}))
    printf >&2 "%s" "${spin:$i:$charwidth}"

    printf >&2 "\b"
    sleep .1
  done
  tput cnorm
  wait "$pid" # capture exit code
  return $?
}

run_command() {
  local message=$1
  shift
  echo >&2 -ne "$message "
  "$@" &>/dev/null &
  spinner $!
  # shellcheck disable=SC2181
  if [ $? -eq 0 ]; then
    echo >&2 -e " ${GREEN}Done.${NOFORMAT}"
  else
    echo >&2 -e " ${RED}FAILED.${NOFORMAT}"
    exit 1
  fi
}

detect_install_cmd() {
  local dir="$1"

  if [[ -f "$dir/pnpm-lock.yaml" ]]; then
    echo "pnpm install"
  elif [[ -f "$dir/yarn.lock" ]]; then
    echo "yarn install"
  elif [[ -f "$dir/bun.lockb" ]]; then
    echo "bun install"
  elif [[ -f "$dir/package-lock.json" ]]; then
    echo "npm install"
  elif [[ -f "$dir/package.json" ]]; then
    echo "npm install"
  else
    echo ""
  fi
}

load_config() {
  local git_common project_root config_file
  git_common="$(git rev-parse --git-common-dir 2>/dev/null)"
  if [[ "$git_common" == ".git" ]]; then
    project_root="."
  else
    project_root="${git_common%/.git}"
  fi
  config_file="$project_root/.worktreerc"

  if [[ -f "$config_file" ]]; then
    # shellcheck source=/dev/null
    source "$config_file"
  fi
}

parse_params() {
  # load config from .worktreerc first
  load_config

  # default values of variables set from params (config can override)
  create_upstream=1
  prefix="${prefix:-$(git config github.user)/}"
  trunk="${trunk:-main}"
  remote="${remote:-origin}"
  base="${base:-$remote/$trunk}"
  branch=''

  while :; do
    case "${1-}" in
    -h | --help) usage ;;
    -v | --verbose) set -x ;;
    --no-color) NO_COLOR=1 ;;
    -N | --no-create-upstream) create_upstream=0 ;;
    -b | --branch)
      branch="$2"
      shift
      ;;
    -B | --base)
      base="${2-}"
      shift
      ;;
    -?*) die "Unknown option: $1" ;;
    *) break ;;
    esac
    shift
  done

  args=("$@")

  # check required params and arguments
  if [[ ${#args[@]} -eq 0 && -z "${branch}" ]]; then
    die "Missing script arguments"
  fi

  # if a branch was not specified, generate one based on the prefix and folder name
  if [[ -z "$branch" ]]; then
    branch="${prefix}${args[0]}"
  fi

  # the branches I typically use are in this format: aaronmcadam/ticket-number/ticket-summary
  # if branch is set, use its ticket-summary (the final segment) as the worktree folder name
  if [[ -n "${branch}" ]]; then
    # Extract the last part after the last '/'
    # Example: for branch "aaronmcadam/TICKET-123/add-feature":
    # 1. rev -> reverses to "erutaef-dda/321-TEKCIT/madacmnoraa"
    # 2. cut -d'/' -f1 -> gets first segment "erutaef-dda"
    # 3. rev -> reverses back to "add-feature"
    # This clever double-reverse trick lets us extract the last segment of a path
    worktree=$(echo "$branch" | rev | cut -d'/' -f1 | rev)
  else
    worktree="${args[0]}"
  fi

  return 0
}

parse_params "$@"
setup_colors

info "Ensuring full branch fetch config..."
if ! git config --get-all remote.origin.fetch | grep -q 'refs/heads/*:refs/remotes/origin/*'; then
  git config --add remote.origin.fetch "+refs/heads/*:refs/remotes/origin/*"
fi
git fetch origin --prune

update_remote() {
  local branch="$1"

  # do nothing if create_upstream is disabled
  [ $create_upstream -eq 0 ] && return 0

  if [[ -z "$(git ls-remote --heads origin "$branch")" ]]; then
    # create remote branch
    msg "${GRAY}Branch '$branch' does not exist on remote. Creating."
    run_command "Creating remote branch ${branch}..." git push -u origin "$branch"
  else
    msg "${GRAY}Branch '$branch' exists. Setting upstream."
    run_command "Setting upstream branch to 'origin/$branch'" git branch --set-upstream-to="origin/$branch"
  fi
}

# check if branch already exists
if [[ -n "$(git branch --list "$branch")" ]]; then
  run_command "Generating new worktree from existing branch: $branch" git worktree add "$worktree" "$branch"
else
  run_command "Generating new worktree: $worktree" git worktree add -b "$branch" "$worktree" "$base"
fi

msg "${GRAY}Moving into worktree: $worktree${NOFORMAT}"
cd "$worktree"
update_remote "$branch"

# Use configured install_cmd, or auto-detect from lockfile
install_cmd="${install_cmd:-$(detect_install_cmd "$PWD")}"
if [[ -n "$install_cmd" ]]; then
  run_command "Installing dependencies..." $install_cmd

  # Run bootstrap script if it exists in package.json
  if [[ -f "package.json" ]] && grep -q '"bootstrap"' package.json; then
    pm="${install_cmd%% *}"  # extract package manager (pnpm, npm, yarn, bun)
    run_command "Running bootstrap script..." "$pm" run bootstrap
  fi
else
  info "No package.json found, skipping dependency install"
fi

# Run post_setup hook if configured
if [[ -n "${post_setup:-}" ]]; then
  run_command "Running post-setup..." bash -c "$post_setup"
fi

msg "${GREEN}Success.${NOFORMAT}"
