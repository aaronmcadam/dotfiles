{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-sonnet-4-20250514",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PAT}"
      }
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp"],
      "enabled": true
    },
    "git": {
      "type": "local",
      "command": ["uvx", "mcp-server-git"],
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--mount",
        "type=bind,src=/Users/aaron/Developer,dst=/projects/Developer,ro",
        "--mount",
        "type=bind,src=/Users/aaron/Obsidian/Remote Second Brain,dst=/projects/Obsidian,ro",
        "--mount",
        "type=bind,src=/Users/aaron/dotfiles,dst=/projects/dotfiles,ro",
        "mcp/filesystem",
        "/projects"
      ],
      "enabled": true
    }
  }
}
