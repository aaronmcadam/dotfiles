layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="zellij:tab-bar"
    }
    children
    pane size=2 borderless=true {
      plugin location="zellij:status-bar"
    }
  }

  pane_template name="nvim" {
    command "nvim"
  }

  tab name="dotfiles" cwd="~/dotfiles" {
    nvim
  }

  tab name="fe" cwd="~/Developer/hopin/superwave-fe" {
    nvim
  }

  tab name="integrations" cwd="~/Developer/hopin/superwave-integrations"{
    nvim
  }

  tab name="api" cwd="~/Developer/hopin/superwave-api"{
    nvim
  }
}
